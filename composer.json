{
    "name": "pxgamer/changelly",
    "type": "library",
    "description": "A PHP wrapper for the Changelly API.",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "pxgamer\\Changelly\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "pxgamer\\Changelly\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true
    }
}
